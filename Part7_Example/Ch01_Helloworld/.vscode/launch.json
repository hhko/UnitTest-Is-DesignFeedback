    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/HelloworldApp/bin/Debug/net6.0/HelloworldApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/HelloworldApp",
            "console": "integratedTerminal",            // Console.ReadLine 디버깅 통합
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}